{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    "baseUrl": ".", // üëà –∫–æ—Ä–µ–Ω—å –ø—Ä–æ–µ–∫—Ç–∞
    "paths": {
      "@/*": ["./*"],
      "@/app/*": ["app/*"],
      "@/lib/*": ["lib/*"],
      "@/types/*": ["types/*"],
      "@/components/*": ["app/components/*"],
      "@/config/*": ["config/*"] // üëà –î–û–ë–ê–í–õ–ï–ù–û
    },

    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
